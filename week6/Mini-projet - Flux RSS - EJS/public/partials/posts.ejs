<% if (articles && articles.length > 0) { %>
    <% articles.forEach(article => { %>
        <div class="article bg-white rounded-lg shadow-md p-6 mb-6">
            <h2 class="text-xl font-bold mb-2"><%= article.title %></h2>
            <a href="<%= article.link %>" class="text-blue-500 hover:underline inline-block mb-3">Lire l'article</a>
            <div class="text-sm text-gray-600 mb-3">
                <p>Date de publication: <%= article.postDate %></p>
                <p>Créateur: <%= article.creator %></p>
                <p>Catégorie: <%= article.category %></p>
            </div>
            <p class="text-gray-700"><%= article.content %></p>
        </div>
    <% }); %>
<% } else { %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
        <div class="flex">
            <div class="ml-3">
                <p class="text-sm text-yellow-700">
                    Aucun article trouvé.
                </p>
            </div>
        </div>
    </div>
<% } %>